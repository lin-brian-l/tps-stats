<h1><%= @entry.title %></h1>

<span class="entry-date block font-3-4 c-lt-gray"><%= "Written on #{long_form_date(@entry.created_at)}. Submitted by " %><a href="/users/<%= @entry.author_id %>/entries"><%= "#{@entry.author.username}." %></a></span>

<p><%= @entry.body %></p>

<ul class="no-bullets no-padding mar-t-2">
  <!-- ASK WHY THIS IS BEING STUPID -->
<% if logged_in? && @current_user.id == @entry.author.id %>
  <li class="pipe-separate left">
    <a href="/entries/<%= ep @entry.id %>/edit" class="c-white">edit</a>
  </li>
  <li class="pipe-separate left">
    <form action="/entries/<%= @entry.id %>" method="post" class="inline">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="delete" class="no-border no-outline no-bg c-white hover-underline">
    </form>
  </li>
<% end %>
</ul>
