<div class="container">
  <h1>Login</h1>

  <% if @errors %>
      <li><%= @errors %></li>
  <% end %>

  <form action="/login" method="post">
    <label for="username_input" class="block mar-b-1">Email:</label>
    <input type="text" name="username" value="" class="block w-100 no-outline no-border pad-1 mar-b-2">
    <br>

    <label for="password_input" class="block mar-b-1">Password:</label>
    <input type="password" name="password" value="" class="block w-100 no-outline no-border pad-1 mar-b-2">
    <br>
    <input type="submit" value="Login" class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
  </form>

  <p>New User? <a href="/sign_up">Sign up</a></p>

</div>
